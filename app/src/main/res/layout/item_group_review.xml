<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="200dp"
    app:cardCornerRadius="10dp"
    android:elevation="0dp"
    android:layout_marginRight="12dp"
    android:layout_height="120dp">

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.nixo.afterworklife.Utils.View.RaduisImageView
        android:id="@+id/riv_head"
        android:src="@mipmap/test_bg"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <com.nixo.afterworklife.Utils.View.RaduisImageView
        android:background="#80000000"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <!--    color_515151-->
    <TextView
        android:singleLine="true"
        android:ellipsize="end"
        android:id="@+id/tv_name"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Sustain社团"
        android:textSize="16dp"
        android:textColor="@color/color_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
     <TextView
        android:id="@+id/tv_num"
         android:layout_below="@id/tv_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:text="00/100"
        android:textSize="14dp"
        android:textColor="#ffbe06"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/is_ing"
        android:text="招募中"
        android:textSize="13dp"
        android:textColor="@color/color_white"
        android:gravity="center"
        android:background="@mipmap/group_zhaomu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>
</androidx.cardview.widget.CardView>
