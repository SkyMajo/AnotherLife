<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/color_white"
    android:layout_height="match_parent">

   <include layout="@layout/include_titlebar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_tongzhi"
            android:text="通知(0)"
            android:drawableTop="@mipmap/message_tongzhi"
            android:textSize="14dp"
            android:textColor="@color/color_121212"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/tv_shetuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:drawableTop="@mipmap/im_private_message"
            android:gravity="center"
            android:text="申请"
            android:textColor="@color/color_121212"
            android:textSize="14dp" />
        <TextView
            android:id="@+id/tv_pinglun"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:text="评论"
            android:drawableTop="@mipmap/message_pinglun"
            android:gravity="center"
            android:textSize="14dp"
            android:textColor="@color/color_121212"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/tv_zan"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="赞"
            android:drawableTop="@mipmap/message_good"
            android:textSize="14dp"
            android:textColor="@color/color_121212"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <TextView
        android:layout_marginTop="46dp"
        android:textSize="18dp"
        android:textColor="@color/color_121212"
        android:layout_marginLeft="25dp"
        android:text="消息列表"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/xrv_message"
        android:layout_marginTop="23dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="13dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>