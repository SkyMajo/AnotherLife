<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    app:cardCornerRadius="11dp"
    android:layout_marginLeft="13dp"
    android:layout_marginRight="13dp"
    android:elevation="1dp"
    android:layout_marginTop="9dp"
    android:layout_marginBottom="10dp"
    android:layout_height="110dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/activity_test" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_marginRight="95dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:singleLine="true"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@+id/iv_head"
            android:paddingRight="13dp"
            android:text="城市中的森林"
            android:textColor="@color/color_2f2f2f"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@+id/iv_head"
            android:drawableLeft="@mipmap/location"
            android:drawablePadding="4dp"
            android:text="地点:陆家嘴国家绿地"
            android:textColor="@color/color_7c7c7c" />


<LinearLayout
    android:layout_alignParentRight="true"
    android:layout_marginTop="25dp"
    android:orientation="vertical"
    android:layout_marginRight="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_edit"
        android:text="编辑"
        android:background="@drawable/blue_raduis5_all"
        android:gravity="center"
        android:textColor="@color/color_white"
        android:layout_width="70dp"
        android:layout_height="25dp"/>
    <TextView
        android:id="@+id/tv_delete"
        android:text="详情"
        android:layout_marginTop="20dp"
        android:background="@drawable/red_raduis5_full"
        android:gravity="center"
        android:textColor="@color/color_white"
        android:layout_width="70dp"
        android:layout_height="25dp"/>
</LinearLayout>

<TextView
    android:id="@+id/tv_over"
    android:visibility="gone"
    android:text="已截止"
    android:textSize="30dp"
    android:gravity="center"
    android:textColor="@color/color_white"
    android:background="#74111111"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>
    </RelativeLayout>


</androidx.cardview.widget.CardView>