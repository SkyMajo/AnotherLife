<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:id="@+id/cancel"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:id="@+id/ll_select"
        android:layout_marginTop="60dp"
        android:background="@mipmap/select_pop"
        android:layout_width="90dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_dymic"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <TextView
            android:text="动态"
            android:layout_marginLeft="2dp"
            android:drawablePadding="5dp"
            android:textSize="14dp"
            android:textColor="@color/color_white"
            android:drawableLeft="@mipmap/dymc_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:background="@color/color_white"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:layout_height="1dp"/>

        <LinearLayout
            android:id="@+id/ll_group"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
            android:layout_marginLeft="2dp"
            android:text="社团"
            android:drawablePadding="5dp"
            android:textSize="14dp"
            android:textColor="@color/color_white"
            android:drawableLeft="@mipmap/group_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        </LinearLayout>

        <View
            android:background="@color/color_white"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:layout_height="1dp"/>
        <LinearLayout
            android:id="@+id/ll_activie"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <TextView
            android:layout_marginLeft="2dp"
            android:text="活动"
            android:drawablePadding="5dp"
            android:textSize="14dp"
            android:textColor="@color/color_white"
            android:drawableLeft="@mipmap/activte_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        </LinearLayout>

        <View
            android:background="@color/color_white"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:layout_height="1dp"/>
        <LinearLayout
            android:id="@+id/ll_user"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <TextView
            android:layout_marginLeft="2dp"
            android:text="用户"
            android:drawablePadding="5dp"
            android:textSize="14dp"
            android:textColor="@color/color_white"
            android:drawableLeft="@mipmap/user_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
